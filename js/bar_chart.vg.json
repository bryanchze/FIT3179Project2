{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 350,
  "height": 200,
  "config": {
    "view": {
      "stroke": "transparent"
    },"axis": {"labelFont": "Open Sans", "titleFont": "Open Sans"},
    "legend": {"labelFont": "Open Sans", "titleFont": "Open Sans"},
    "header": {"labelFont": "Open Sans", "titleFont": "Open Sans"},
    "mark": {"font": "Open Sans"},
    "title": {"font": "Open Sans", "subtitleFont": "Open Sans"}
  },"background": "#f2f3f7",
  "data": {
    "url": "https://raw.githubusercontent.com/bryanchze/FIT3179Project2/main/data/world_happiness_compiled.csv"
  },
  "params": [
    {
      "name": "Year_selection",
      "bind": {
        "input": "select",
        "options": [
          null,
          2015,
          2016,
          2017,
          2018,
          2019
        ],
        "labels": [
          "Show All",
          "2015",
          "2016",
          "2017",
          "2018",
          "2019"
        ],
        "name": "Year: "
      }
    }
  ],
  "transform": [
    {
      "filter": "Year_selection == null || datum.Year == Year_selection"
    },
    {
      "joinaggregate": [
        {
          "op": "mean",
          "field": "Happiness Score",
          "as": "average_score"
        }
      ],
      "groupby": [
        "Region"
      ]
    }
  ],
  "encoding": {
    "y": {
      "field": "Region",
      "type": "nominal",
      "title": "Region",
      "axis": {
        "grid": false
      }
    },
    "x": {
      "aggregate": "average",
      "field": "average_score",
      "type": "quantitative",
      "title": "Average Happiness Score",
      "axis": {
        "grid": false
      }
    },
    "tooltip": [
        {
            "field": "Region",
            "type": "nominal",
            "title": "Region"
        },
        {
            "field": "average_score",
            "type": "quantitative",
            "format": ".2f",
            "title": "Average Score"
        }   
            ]
  },
  "layer": [
    {
      "mark": "bar"
    },
    {
      "mark": {
        "type": "text",
        "align": "left",
        "baseline": "middle",
        "dx": 3
      },
      "encoding": {
        "text": {
          "field": "average_score",
          "type": "quantitative",
          "format": ".2f"
        }
      }
    }
  ]
}
